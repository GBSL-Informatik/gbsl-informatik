{
	"name": "gbsl-informatik",
	"displayName": "gbsl-informatik",
	"publisher": "lebalz",
	"description": "includes all dependencies to start programming with python",
	"version": "0.0.15",
	"engines": {
		"vscode": "^1.47.0"
	},
	"homepage": "https://github.com/GBSL-Informatik/gbsl-informatik/blob/master/README.md",
	"bugs": {
		"url": "https://github.com/GBSL-Informatik/gbsl-informatik/issues"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/GBSL-Informatik/gbsl-informatik"
	},
	"icon": "logo.jpeg",
	"galleryBanner": {
		"color": "#ffffff",
		"theme": "light"
	},
	"categories": [
		"Other"
	],
	"extensionPack": [
		"lebalz.python2go",
		"ms-python.python",
		"bierner.markdown-preview-github-styles",
		"LittleFoxTeam.vscode-python-test-adapter",
		"hbenl.vscode-test-explorer",
		"zhuangtongfa.material-theme",
		"visualstudioexptteam.vscodeintellicode",
		"ms-python.vscode-pylance"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"contributes": {
		"commands": [
			{
				"command": "gbsl.configure",
				"category": "GBSL",
				"title": "Configure",
				"icon": {
					"light": "run-file.svg",
					"dark": "run-file.svg"
				}
			},
			{
				"command": "gbsl.run_debug",
				"category": "GBSL",
				"title": "Programm Ausf端hren",
				"icon": {
					"light": "resources/light/debug-file.svg",
					"dark": "resources/dark/debug-file.svg"
				}
			},
			{
				"command": "gbsl.run_and_stop",
				"category": "GBSL",
				"title": "Programm Ausf端hren",
				"icon": {
					"light": "resources/light/debug-file-and-stop.svg",
					"dark": "resources/dark/debug-file-and-stop.svg"
				}
			}
		],
		"menus": {
			"editor/title": [
                {
                    "command": "gbsl.run_and_stop",
                    "title": "Programm ausf端hren, am Anfang warten",
					"group": "navigation",
					"when": "resourceLangId == python"
				},
                {
                    "command": "gbsl.run_debug",
                    "title": "Programm ausf端hren",
					"group": "navigation",
					"when": "resourceLangId == python"
				}
			]
		},
		"configuration": {
			"title": "GBSL",
			"properties": {
				"gbsl.ignore_configurations": {
					"type": [
						"boolean"
					],					
					"default": false,
					"description": "Wheter to ignore additional configuration settings performed by the gbsl extension"
				}
			}
		}
	},
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.47.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}